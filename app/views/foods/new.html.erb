<h1>Add Food Items</h2>

  <%= form_with(model: @food) do |f| %>
      <%= f.text_field :name, placeholder: "Food name", autofocus: true, required: true %>
      <%= f.text_field :measurement_unit, placeholder: "Measurement unit", required: true %>
      <%= f.text_field :quantity, placeholder: "Quantity", required: true %>
      <%= f.text_field :price, placeholder: "Unit price", required: true %>
      <%= f.submit "Add Food" %>
  <% end %>
<% if flash[:error].present? %>
  <p><%= flash[:error] %></p>
<% end %>
